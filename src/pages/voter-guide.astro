  <h2 class="text-xl md:text-3xl text-center">ELECTION DAY: TUESDAY, NOV. 5<br />EARLY VOTING OCT. 21-NOV. 1, 2024</h2>

  <div class="max-w-3xl mx-auto">
    <h2 class="w-full text-lg font-heading font-semibold mt-12 text-gray-600 dark:text-gray-400 ml-6">
      Local Candidates
    </h2>
  </div>

  <div class="mt-6 mb-24 max-w-3xl mx-auto grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    <Candidate
      image="src/assets/images/2024/donna-campbell.jpg"
      name="Donna Campbell"
      office="Texas Senate District 25"
      location="Local"
      incumbent="true"
      xProfile="https://twitter.com/johndoe"
      facebook="https://facebook.com/johndoe"
      truthsocial="https://truthsocial.com/@johndoe"
      url="https://www.donnacampbell.com/"
    />
