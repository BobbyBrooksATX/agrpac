    />
    <Candidate
      image="src/assets/images/2024/john-messinger.jpeg"
      name="John Messinger"
      office="Third Court of Appeals, Place 2"
      location="Local"
      xProfile="https://twitter.com/johndoe"
      facebook="https://facebook.com/johndoe"
      truthsocial="https://truthsocial.com/@johndoe"
      url="https://messingerforjustice.com/"
    />
