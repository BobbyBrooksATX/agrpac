      image="src/assets/images/2024/scott-firsing.jpeg"
      name="Scott Firsing"
      office="Texas House District 47"
      location="Local"
      xProfile="https://twitter.com/johndoe"
      facebook="https://facebook.com/johndoe"
      truthsocial="https://truthsocial.com/@johndoe"
      url="https://www.scottfirsing.com/"
    />
    <Candidate
      image="src/assets/images/2024/daniel-betts.jpeg"
      name="Daniel W. Betts"
      office="Texas County District Attorney"
      location="Local"
      xProfile="https://twitter.com/johndoe"
      facebook="https://facebook.com/johndoe"
      truthsocial="https://truthsocial.com/@johndoe"
      url="https://bettsforda.com/"
    />
  </div>

  <div class="max-w-3xl mx-auto">
    <h2 class="w-full text-lg font-heading font-semibold mt-12 text-gray-600 dark:text-gray-400 ml-6">
      State & Regional Candidates
    </h2>
  </div>

  <div class="mt-6 mb-24 max-w-3xl mx-auto grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
