  <div class="max-w-3xl mx-auto">
    <h2 class="w-full text-lg font-heading font-semibold mt-12 text-gray-600 dark:text-gray-400 ml-6">
      National Candidates
    </h2>
  </div>

  <div class="mt-6 mb-24 max-w-3xl mx-auto grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    <Candidate
      image="src/assets/images/2024/donald-trump.jpeg"
      name="Donald J. Trump"
      office="United States President"
      location="Federal"
      xProfile="https://x.com/realdonaldtrump"
