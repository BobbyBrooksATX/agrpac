---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import FormContainer from '~/components/ui/FormContainer.tsx'; // Import the React form component

const metadata = {
  title: 'Victory Team',
};
// Use import.meta.env to access environment variables in Astro
const apiUrl = import.meta.env.API_URL_MAIN_ACCOUNT;
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Get Involved" title="Take Action Today" />

  <!-- New Form Container with client:load ******************* -->
  <div
    id="form"
    class="flex flex-col mb-16 max-w-xl mx-auto rounded-lg backdrop-blur border bg-slate-100 border-gray-200 dark:border-gray-700 dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full"
  >
    <FormContainer client:load button="I'm ready!" apiUrl={apiUrl} />
  </div>
</Layout>
